    "xo": "^0.12.1"
  },
  "engines": {
    "node": "5.6.x",
    "npm": "3.7.x"
  },
  "xo": {
    "extends": "xo-react",
    "rules": {
      "comma-dangle": [
        0
      ],
      "no-negated-condition": [
        0
      ],
      "react/jsx-indent": [
        2,
        2
      ],
      "react/jsx-indent-props": [
        2,
        2
      ],
      "xo/filename-case": 0,
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ]
    },
    "esnext": true,
    "space": true,
    "semicolon": false
  },
  "precommit": [
    "lint"
  ]
}
